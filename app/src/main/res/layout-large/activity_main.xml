<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adityawiguna.pemrogramanphp.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tentang"
        android:src="@drawable/info"
        android:layout_alignTop="@+id/materi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/materi"
        android:src="@drawable/book"
        android:layout_alignTop="@+id/simulasi"
        android:layout_alignLeft="@+id/bantuan"
        android:layout_alignStart="@+id/bantuan" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/simulasi"
        android:src="@drawable/simulasi"
        android:layout_above="@+id/keluar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="107dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kuis"
        android:src="@drawable/kuiss"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bantuan"
        android:src="@drawable/bantuan"
        android:layout_alignTop="@+id/kuis"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keluar"
        android:src="@drawable/keluar"
        android:layout_alignTop="@+id/bantuan"
        android:layout_alignLeft="@+id/simulasi"
        android:layout_alignStart="@+id/simulasi" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/logophp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/simulasi"
        android:layout_alignEnd="@+id/simulasi"
        android:layout_marginTop="82dp" />
</RelativeLayout>
